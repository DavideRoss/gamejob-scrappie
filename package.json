{
  "name": "gamejob-scrappie",
  "version": "1.0.0",
  "description": "Scraper for jobs in the game development industry",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "start:dev": "tsc && node dist/app.js --dev",
    "dev": "nodemon --config nodemon.json src/app.ts",
    "build": "tsc",
    "docker:build": "docker build -t gamejob-scrappie .",
    "docker:start": "docker run -it -p 7777:7777 gamejob-scrappie",
    "docker:postgres": "docker run -d -p 0.0.0.0:5432:5432 -e POSTGRES_HOST_AUTH_METHOD=trust postgres",
    "docker:container-stop": "docker stop $(docker ps -a -q)",
    "docker:container-rm": "docker rm $(docker ps -a -q)"
  },
  "author": "Davide Rossetto <davide.ross93@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/pg": "^8.6.5",
    "@types/sqlite3": "^3.1.8",
    "nodemon": "^2.0.16",
    "tslint": "^6.1.3",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "@slack/web-api": "^6.7.1",
    "cheerio": "^1.0.0-rc.11",
    "discord.js": "^13.8.0",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-basic-auth": "^1.2.1",
    "lodash": "^4.17.21",
    "minimist": "^1.2.6",
    "pg": "^8.7.3",
    "sqlite": "^4.1.1",
    "sqlite3": "^5.0.8",
    "uuid": "^8.3.2",
    "yaml": "^2.1.0"
  }
}
